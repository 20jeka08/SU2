CXX = /opt/openmpi/bin/mpic++
CXXFLAGS = -O3 -Wall -Wno-non-virtual-dtor -DNO_METIS -DNO_OMP -DNO_CGNS -DNO_TECIO

ifeq (,$(findstring -DNO_CGNS,$(CXXFLAGS)))
	INC_CGNS = -I/usr/local/include
	LIB_CGNS = -L/usr/local/lib -lcgns
endif