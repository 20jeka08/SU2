CXX = mpicxx
CXXFLAGS = -O3 -diag-disable 654 -Wall -Wno-non-virtual-dtor   \
           -DNO_METIS -DNO_OMP -DNO_CGNS -no-prec-div          \
           -std=c++0x -funroll-all-loops -xHost -fast

ifeq (,$(findstring -DNO_CGNS,$(CXXFLAGS)))
	INC_CGNS = -I/usr/local/include
	LIB_CGNS = -L/usr/local/lib -lcgns
endif
